<p id="notice"><%= notice %></p>

<h1>Tests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <ul id="tests">
    <%= render @tests %>
  </ul>
  
  <br>
  
  <%= form_with(model: @test, local: true) do |form| %>
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>  
    
    <div class="field">
      <%= form.label :uploads %>
      <%= form.file_field :uploads, multiple: true %> <!--for multiple uploads-->
    </div>
    
    <div class="actions">
      <%= form.submit data: { "disable-with": "Uploading..." }%>
    </div>
  <% end %>

  
  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.name %></td> 
        <td><%= link_to 'Show', test %></td>
        <td><%= link_to 'Edit', edit_test_path(test) %></td>
        <td><%= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Test', new_test_path %>
